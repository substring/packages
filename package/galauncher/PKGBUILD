pkgname=galauncher
pkgver=0.1.1
pkgrel=1
pkgdesc="GroovyArcade emulator launcher"
arch=(any)
license=(GPL-2)
depends=(bash)
makedepends=(git)
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("https://gitlab.com/groovyarcade/tools/galauncher/-/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=('95661bb5f7c324cb535c5a56da01123290f1c1708fa0d02065ecf50456f65f0f')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/opt/${pkgname}" install
}
