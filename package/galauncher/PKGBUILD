pkgname=galauncher
pkgver=0.1
pkgrel=1
pkgdesc="GroovyArcade emulator launcher"
arch=(any)
license=(GPL-2)
depends=(bash)
makedepends=(git)
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("https://gitlab.com/groovyarcade/tools/galauncher/-/archive/0.1/${pkgname}-${pkgver}.tar.gz")
sha256sums=('270fc2b5a193c7258fe1b3adc6e02af26591b0ce4e8999b521ad5712bdd65874')

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/opt/${pkgname}" install
}
