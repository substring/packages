pkgname=galauncher
pkgver=0.1.2
pkgrel=1
pkgdesc="GroovyArcade emulator launcher"
arch=(any)
license=(GPL-2)
depends=(bash)
makedepends=(git)
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("https://gitlab.com/groovyarcade/tools/galauncher/-/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=(396d8f78f5d87b80072c745fd7a810f049af519525b337c1c8919eb57a6c5868)

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/opt/${pkgname}" install
}
