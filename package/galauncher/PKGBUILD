pkgname=galauncher
pkgver=0.2.2
pkgrel=1
pkgdesc="GroovyArcade emulator launcher"
arch=(any)
license=(GPL-2)
depends=(bash cpupower)
makedepends=(git)
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("https://gitlab.com/groovyarcade/tools/galauncher/-/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=(1f6ed551b2b7e1137a85006d2b0cce0ef1416c720c954f82db0478b3c440bde6)

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/opt/${pkgname}" install
}
