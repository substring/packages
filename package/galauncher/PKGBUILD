pkgname=galauncher
pkgver=0.2.1
pkgrel=1
pkgdesc="GroovyArcade emulator launcher"
arch=(any)
license=(GPL-2)
depends=(bash cpupower)
makedepends=(git)
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("https://gitlab.com/groovyarcade/tools/galauncher/-/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=(94b7c1a039f2c2ab6adb45b8d3db83d08ccb57ccefe743fc5da45d6ae243e78a)

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/opt/${pkgname}" install
}
