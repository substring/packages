pkgname=galauncher
pkgver=0.1.5
pkgrel=1
pkgdesc="GroovyArcade emulator launcher"
arch=(any)
license=(GPL-2)
depends=(bash cpupower)
makedepends=(git)
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("https://gitlab.com/groovyarcade/tools/galauncher/-/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=(96238ea2aae175fe84e940da4c715e228c095ec2a9841353efa5487eeb6ee1b7)

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir/opt/${pkgname}" install
}
