pkgname=drminfo
pkgver=2.3.0
pkgrel=1
pkgdesc="Small utility to dump info about DRM devices"
url="https://github.com/ascent12/drm_info"
license=(custom)
arch=(x86_64)
source=("https://github.com/ascent12/drm_info/archive/refs/tags/v${pkgver}.tar.gz")
sha256sums=(SKIP)
depends=('libdrm' 'json-c' 'pciutils')
makedepends=('meson' 'ninja')

build() {
  ls -l
  cd "drm_info-${pkgver}"
  meson -Dprefix="$pkgdir"/usr/local build
  cd build
  ninja
}

package() {
  cd "drm_info-${pkgver}"/build
  ninja install
}
