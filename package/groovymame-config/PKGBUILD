pkgname=groovymame-config
pkgver=0.221
pkgrel=1
pkgdesc="Basic GroovyMame configuration for GroovyArcade"
arch=('any')
url=https://gitlab.com/groovyarcade
_mamever=${pkgver#*.}
license=('GPL3')
depends=('groovyarcade-config' 'groovymame' 'gatools' 'attract')
optdepends=('attract: Attract Mode support')
makedepends=(p7zip)
source=("https://www.mameworld.info/mameinfo/download/Mameinfo0${_mamever}.zip"
        "https://www.arcade-history.com/dats/history${_mamever}.zip")
sha256sums=(SKIP
            SKIP)
install=groovymame-config.install

prepare () {
  7z x "Mameinfo0${_mamever}.7z"
}

package() {
  install -Dm777 history.dat "${pkgdir}"/home/arcade/shared/configs/mame/dat/history.dat
  install -Dm777 mameinfo.dat "${pkgdir}"/home/arcade/shared/configs/mame/dat/mameinfo.dat
}
