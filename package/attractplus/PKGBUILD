pkgname=attractplus
pkgver=3.0.3
pkgrel=2
_commit=8a842e7e2d222aed179c8dea349e81d2c6b565a5
pkgdesc="A graphical front-end for command line emulators that hides the underlying operating system and is intended to be controlled with a joystick or gamepad."
arch=('any')
url="http://www.attractmode.org/"
license=('GPL3')
depends=('openal' 'ffmpeg' 'fontconfig' 'libarchive' 'curl' 'libva-mesa-driver' 'glu' 'libsndfile' 'libxrandr' 'libxcursor' 'libjpeg' 'glew' 'freetype2' 'xcb-util-image')
makedepends=('git' 'cmake' 'mesa')
conflicts=('attractplus-git' 'attractplus-x11' 'attractplus-kms')
replaces=('attractplus-x11' 'attractplus-kms')
#source=("${pkgname}::git+https://github.com/oomek/attractplus.git#tag=${pkgver}"
source=("${pkgname}::git+https://github.com/oomek/attractplus.git#commit=${_commit}"
        "attractplus.sh")
sha256sums=('SKIP'
            'SKIP')
provides=('attract')
install=attractplus.install

build() {
	cd "${pkgname}"
	build_x11
	build_kms
}

package() {
	cd "${pkgname}"

	cat <<'EOF' >> Makefile

install_assets: $(DATA_PATH)
	mkdir -p $(DESTDIR)$(DATA_PATH)
	cp -r config/* $(DESTDIR)$(DATA_PATH)
EOF
	make prefix="${pkgdir}/usr/local" install_assets
	install -Dm644 License.txt ${pkgdir}/usr/share/licenses/${_gitname}/License.txt
	install -Dm755 ../attractplus.sh "${pkgdir}"/usr/local/bin/attractplus
	install -Dm755 attractplus-x11 "${pkgdir}"/usr/local/bin/attractplus-x11
	install -Dm755 attractplus-kms "${pkgdir}"/usr/local/bin/attractplus-kms
}

build_x11() {
	make clean
	make prefix=/usr/local STATIC=1 FE_HWACCEL_VAAPI=1 FE_VERSION=$pkgver
	mv attractplus attractplus-x11
}

build_kms() {
	make clean
	make prefix=/usr/local STATIC=1 FE_HWACCEL_VAAPI=1 FE_VERSION=$pkgver USE_DRM=1
	mv attractplus attractplus-kms
}
