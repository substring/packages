pkgname=groovyarcade-config
pkgver=0.1.3
pkgrel=5
pkgdesc="Basic GroovyArcade setup"
arch=('any')
url=https://gitlab.com/groovyarcade
source=('.xinitrc')
license=('GPL3')
depends=(plymouth-theme-groovy xmlstarlet plymouth)
install=groovyarcade-config.install
sha256sums=(SKIP)

package() {
  cd "${srcdir}"
  install -m 644 -D .xinitrc "${pkgdir}"/home/arcade/.xinitrc
}
