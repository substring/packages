pkgname=groovymame-extra
pkgver=0.251
pkgrel=1
pkgdesc="GroovyMame extra files"
arch=('any')
url=https://gitlab.com/groovyarcade
_mamever=${pkgver#*.}
_nplayers=0246
license=('GPL3')
makedepends=('p7zip')
source=("https://www.mameworld.info/mameinfo/download/Mameinfo0${_mamever}.zip"
        "https://www.arcade-history.com/dats/historyxml${_mamever}.zip"
        "https://github.com/mamedev/mame/releases/download/mame0${_mamever}/mame0${_mamever}lx.zip"
        "https://www.progettosnaps.net/download/?tipo=catver&file=pS_CatVer_${_mamever}.zip"
        "https://www.progettosnaps.net/download/?tipo=series&file=pS_Series_${_mamever}.zip"
        "https://www.progettosnaps.net/download/?tipo=languages&file=pS_Languages_${_mamever}.zip"
        "http://nplayers.arcadebelgium.be/files/nplayers${_nplayers}.zip")
sha256sums=(SKIP
            SKIP
            SKIP
            SKIP
            SKIP
            SKIP
            SKIP)
conflicts=('groovymame-config')
replaces=('groovymame-config')

prepare () {
  7z x "Mameinfo0${_mamever}.7z"
}

package() {
  install -Dm755 history.xml "${pkgdir}"/usr/share/mame/dat/history.dat
  install -Dm755 mameinfo.dat "${pkgdir}"/usr/share/mame/dat/mameinfo.dat
  install -Dm755 mame0${_mamever}.xml "${pkgdir}"/usr/share/mame/dat/mame.dat
  install -Dm755 catver.ini "${pkgdir}"/usr/share/mame/dat/catver.ini
  install -Dm755 folders/series.ini "${pkgdir}"/usr/share/mame/dat/series.ini
  install -Dm755 nplayers.ini "${pkgdir}"/usr/share/mame/dat/nplayers.ini
  install -Dm755 folders/languages.ini "${pkgdir}"/usr/share/mame/dat/languages.ini
}
