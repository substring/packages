pkgver=0.4.3
pkgrel=1
pkgdesc="LED Animator and Controller for Linux"
arch=('any')
url="https://sourceforge.net/p/ledspicer/wiki/Home/"
source=("https://github.com/meduzapat/LEDSpicer/archive/${pkgver}.tar.gz"
        "ledspicer.conf.sample"
        "singleColor.xml"
        "P1_B1.xml"
        "P1_B2.xml"
        "P1_B3.xml"
        "P1_B4.xml"
        "P1_B5.xml"
        "P1_B6.xml"
        "P1_B.xml"
        "P2_B1.xml"
        "P2_B2.xml"
        "P2_B3.xml"
        "P2_B4.xml"
        "P2_B5.xml"
        "P2_B6.xml"
        "P2_B.xml"
        "P3_B1.xml"
        "P3_B2.xml"
        "P3_B3.xml"
        "P3_B4.xml"
        "P3_B.xml"
        "P4_B1.xml"
        "P4_B2.xml"
        "P4_B3.xml"
        "P4_B4.xml"
        "P4_B.xml"
        "example.rgba"
        "filereader.xml"
        "filler.xml"
        "grandient.xml"
        "groovy.xml"
        "pulse.xml"
        "pulseaudio.xml"
        "random.xml"
        "serpentine.xml")
sha256sums=(SKIP
            SKIP
